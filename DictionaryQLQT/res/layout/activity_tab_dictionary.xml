<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:paddingRight="0dp"
    tools:context=".DictionaryActivity" >

    <RelativeLayout
        android:id="@+id/RelativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="74dp"
        android:background="@drawable/bg_search_bar"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/imgBranding"
            android:layout_width="match_parent"
            android:layout_height="31dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:src="@drawable/branding"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/imgSearchbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@drawable/searchbar1" />

        <ImageView
            android:id="@+id/imgSearchbarClick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@drawable/searchbar2" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="7dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/btnVoiceSearch"
            android:layout_marginTop="1dp"
            android:layout_toLeftOf="@+id/btnVoiceSearch"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_reset_search"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/btnResetsearch"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imgBranding"
            android:layout_marginTop="5dp"
            android:layout_toLeftOf="@+id/imageView4"
            android:src="@drawable/ic_reset_search" />

        <ImageView
            android:id="@+id/btnVoiceSearch"
            android:layout_width="41dp"
            android:layout_height="34dp"
            android:layout_alignTop="@+id/btnResetsearch"
            android:layout_toLeftOf="@+id/btnCancelSearch"
            android:src="@drawable/button_audio_normal" />

        <ImageView
            android:id="@+id/btnCancelSearch"
            android:layout_width="38dp"
            android:layout_height="34dp"
            android:layout_alignTop="@+id/btnVoiceSearch"
            android:layout_toLeftOf="@+id/imageView1"
            android:src="@drawable/button_cancelsearch_normal" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="2dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/btnCancelSearch"
            android:src="@drawable/tab_focus_bar_right"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/btnSearchbox"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignTop="@+id/btnResetsearch"
            android:layout_marginLeft="15dp"
            android:src="@drawable/ic_searchbox" />

        <AutoCompleteTextView
            android:id="@+id/mactSearchText"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_alignBottom="@+id/btnResetsearch"
            android:layout_toLeftOf="@+id/btnResetsearch"
            android:layout_toRightOf="@id/btnSearchbox"
            android:ems="10"
            android:gravity="bottom"
            android:imeOptions="actionSearch"
            android:text="AutoCompleteTextView"
            android:textColorHighlight="@android:color/transparent"
            android:textColorLink="@android:color/transparent"
            android:background="@android:color/transparent"
            android:textSize="16sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/RelativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginTop="0dp"
        android:background="#FF0000" >

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="200dp"
            android:layout_height="379dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/img_logo" />

        <WebView
            android:id="@+id/wvMeaning"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </RelativeLayout>

</LinearLayout>